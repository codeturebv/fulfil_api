source "https://rubygems.org"

# Specify your gem's dependencies in fulfil.gemspec
gemspec

gem "minitest", "~> 5.16" # A complete suite of testing facilities supporting TDD. [https://github.com/minitest/minitest]
gem "minitest-reporters", "~> 1.7" # Enhance the default minitest reporter. [https://github.com/minitest-reporters/minitest-reporters]

gem "rake", "~> 13.0"

gem "rubocop", "~> 1.21" # RuboCop is a Ruby code style checking and code formatting tool. [https://github.com/rubocop/rubocop/]
gem "rubocop-minitest", "~> 0.35" # Automatic Minitest code style checking. [https://github.com/rubocop/rubocop-minitest]
gem "rubocop-performance", "~> 1.21" # Automatic checking of performance optimizations in Ruby. [https://github.com/rubocop/rubocop-performance/]
gem "rubocop-rake", "~> 0.6" # Automatic Rake code style checking. [https://github.com/rubocop/rubocop-rake]
